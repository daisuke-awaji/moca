{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "inputSchema": { "type": "object" }
        }
      }
    }
  },
  "tools": [
    {
      "name": "echo",
      "description": "入力されたメッセージをそのまま返すツール。メッセージの長さや大文字小文字変換も提供します。",
      "inputSchema": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "エコーするメッセージ文字列"
          }
        },
        "required": ["message"],
        "additionalProperties": false
      }
    },
    {
      "name": "ping",
      "description": "Lambda関数の接続確認とシステム情報を取得するツール。レスポンス時間やメモリ使用量などの情報を返します。",
      "inputSchema": {
        "type": "object",
        "properties": {},
        "additionalProperties": false
      }
    },
    {
      "name": "kb-retrieve",
      "description": "Amazon Bedrock Knowledge Base から関連するチャンクをセマンティック検索で取得するツール。指定されたクエリに最も関連性の高いドキュメントチャンクを返します。",
      "inputSchema": {
        "type": "object",
        "properties": {
          "knowledgeBaseId": {
            "type": "string",
            "description": "検索対象のKnowledge BaseのID"
          },
          "query": {
            "type": "string",
            "description": "検索クエリ文字列"
          },
          "numberOfResults": {
            "type": "integer",
            "description": "取得する結果の最大件数（デフォルト: 5）",
            "default": 5,
            "minimum": 1,
            "maximum": 100
          }
        },
        "required": ["knowledgeBaseId", "query"],
        "additionalProperties": false
      }
    }
  ]
}
